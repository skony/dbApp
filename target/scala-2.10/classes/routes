# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()

# Courses list (look at the default values for pagination parameters)
GET     /courses                  controllers.Application.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add course
GET     /courses/new              	controllers.Application.create()
POST    /courses                  	controllers.Application.save()

# Edit existing course
GET     /courses/:name              controllers.Application.edit(name:String)
POST    /courses/:name              controllers.Application.update(name:String)

# Delete a course
POST    /courses/:name/delete       controllers.Application.delete(name:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
